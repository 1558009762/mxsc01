			type = "flat_dt";
			arch = "arm";
			compression = "none";
			hash@1 {
				algo = "md5";
			};
		};
*/		
	};	
	
	configurations {
		default = "conf@1";
		conf@1 {
			description = "Boot Linux kernel with FDT blob ";
			kernel = "kernel@1";
			fdt = "fdt@1";
		};
